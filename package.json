{
  "name": "menhera-ai",
  "displayName": "menhera-ai",
  "description": "コードのエラー文をメンヘラにするVSコードの拡張機能",
  "version": "0.0.1",
  "publisher": "rui319420",
  "icon": "images/new_menhera_logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hamatiign/MENHERA-ai"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:csharp",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:php",
    "onLanguage:ruby",
    "onLanguage:swift",
    "onLanguage:dart",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "menhera-mascot-container",
          "title": "メンヘラAIマスコット",
          "icon": "images/new_menhera_logo.svg"
        }
      ]
    },
    "views": {
      "menhera-mascot-container": [
        {
          "type": "webview",
          "id": "menhera-ai.mascotView",
          "name": "メンヘラAI",
          "icon": "images/new_menhera_logo.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "menhera-ai.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "menheraSpam",
        "title": "メンヘラAI: 放置演出（スパム）を発動",
        "category": "Menhera AI"
      }
    ],
    "configuration": {
      "title": "Menhera AI",
      "properties": {
        "menhera-ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini APIキーを入力してください"
        },
        "menhera-ai.angerThreshold": {
          "type": "number",
          "default": 5,
          "description": "メンヘラ彼女が激怒モード（お仕置き）に入るエラーの数"
        },
        "menhera-ai.enableVoice": {
          "type": "boolean",
          "default": true,
          "description": "手紙が届いた時にボイスを再生するかどうか"
        },
        "menhera-ai.checkDelay": {
          "type": "number",
          "default": 2000,
          "description": "入力が止まってからメンヘラチェックが走るまでの待機時間（ミリ秒）"
        },
        "menhera-ai.enableCheckOnEdit": {
          "type": "boolean",
          "default": true,
          "description": "入力中（自動診断時）にメンヘラチェックを行うかどうか"
        },
        "menhera-ai.enableCheckOnSave": {
          "type": "boolean",
          "default": true,
          "description": "保存時にメンヘラチェックを行うかどうか"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "chalk": "^4.1.2",
    "dotenv": "^17.2.3",
    "gradient-string": "^3.0.0",
    "play-sound": "^1.1.6",
    "say": "^0.16.0"
  }
}
