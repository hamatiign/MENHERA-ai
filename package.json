{
  "name": "menhera-ai",
  "displayName": "menhera-ai",
  "description": "コードのエラー文をメンヘラにするVSコードの拡張機能",
  "version": "0.0.1",
  "publisher": "rui319420",
  "repository": {
    "type": "git",
    "url": "https://github.com/hamatiign/MENHERA-ai"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "menhera-mascot-container",
          "title": "メンヘラAIマスコット",
          "icon": "images/new_menhera_logo.svg"
        }
      ]
    },
    "views": {
      "menhera-mascot-container": [
        {
          "type": "webview",
          "id": "menhera-ai.mascotView",
          "name": "メンヘラAI",
          "icon": "images/new_menhera_logo.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "menhera-ai.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Menhera AI",
      "properties": {
        "menhera-ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini APIキーを入力してください"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^17.2.3",
    "play-sound": "^1.1.6",
    "say": "^0.16.0"
  }
}
